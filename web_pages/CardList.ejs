<!DOCTYPE html>
<title>Card List</title>
<html lang="en-US">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1.0">
<style>
  body {
   font-family: 'Courier New', monospace;
  }
*{
  margin: 0; padding: 0; border: 0; box-sizing: border-box;
  }

  #container {
  min-height: 100vh;
  }

  .top {
    height: 260px;
    background-color: #000080;
  }

  .bottom {
    height: 55vh;
    background-color: #ffffff;
  }

/*NAVIGATION BAR*/
/* font-family: Arial, Helvetica, sans-serif;
  }
  
*/

  .topnav {
  overflow: hidden;
  background-color: #000080;
  }

  .topnav a {
  float: left;
  color: #ffffff;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 20px;
  }

  .topnav a:hover {
  background-color: #ddd;
  color: black;
  }

  .topnav a.active {
  background-color: #ffffff;
  color: black;
  }

  .clsFirstImg
    {

      position:absolute; /*pokemon logo placement */
      top:0px; /* up and down */
      left:0px; /* left and right */
    }

    .clsSecondImg
    {

      position:absolute; /*trainer logo placement */
      top:24px; /* up and down */
      left:75px; /* left and right */
    }
    
    .image-container {
      position: relative; 
      height: 185px;
    }

    * {
      box-sizing: border-box;
    }

    body {
      font-family: Arial, Helvetica, sans-serif;
    }

    /* Float four columns side by side */
    .column {
      float: left;
      width: 25%;
      padding: 0 10px;
    }

    /* Remove extra left and right margins, due to padding in columns */
    .row {margin: 0 -5px;}

    /* Clear floats after the columns */
    .row:after {
      content: "";
      display: table;
      clear: both;
    }

    /* Style the counter cards */
    .card {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); /* this adds the "card" effect */
      padding: 16px;
      text-align: center;
      background-color: #f1f1f1;
    }

    /* Responsive columns - one column layout (vertical) on small screens */
    @media screen and (max-width: 400px) {
      .column {
        width: 100%;
        display: block;
        margin-bottom: 20px;
      }
    }
    h2{
      text-align: center;
    }
    .card {
      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
      transition: 0.3s;
      margin: auto;
      width: 50%;
      padding: 10px;
    }

    .card:hover {
      box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    .container {
      padding: 2px 16px;
    }
    
</style>
</head>

<body>
  <div id="container">
    <div class="topnav">
      <a href="Home.html">Home</a>
      <a href="BrowseSets.html">Browse Sets</a>
      <a class="active" href="CardList.ejs">Card List</a>
    </div>
    <div class="top">
        <div class="image-container">
          <img src="https://res.cloudinary.com/swunder/image/upload/v1619459516/giantpokeball_ntdb1u.svg" class="clsFirstImg" alt="ball logo" height="180px" style="width:100%;">

        <img src= "https://res.cloudinary.com/swunder/image/upload/v1619459518/trainerLogo_hae2af.svg" class="clsSecondImg" alt="trainer logo" height="160px" style="width:100%;">
      </div>
      <center>
        <h1 style="color:#FFD801; font-size:50px; margin-top: 0px;">Pokemon Database<h1>
      </center>

      </div>
      <% for(var i=0; i< cards.length; i++){ %>
        <div class="card">
          <img src="<%= cards[i][8] %>"  style="width:42%">
          <div class="container">
            <h4>
              <b>
                Pokemon Name: <%= cards[i][1] %>
              </b>
            </h4>
            <p>Pokemon Type: <%= cards[i][4] %></p>
            <p>Pokemon Rarity <%= cards[i][5]%></p>
          </div>
        </div>
      <% } %>
</body>
</html>